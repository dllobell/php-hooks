{
    "name": "dllobell/hooks",
    "description": "Lightweight, framework-agnostic hooks system for PHP",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "hooks"
    ],
    "authors": [
        {
            "name": "David Llobell",
            "email": "dllobellmoya@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/dllobell/hooks",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "eolica/coding-standard": "^2.0",
        "pestphp/pest": "^4.0",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0",
        "symfony/var-dumper": "^7.0",
        "pestphp/pest-plugin-type-coverage": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Dllobell\\Hooks\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dllobell\\Hooks\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": [
            "ecs check"
        ],
        "lint-fix": [
            "ecs check --fix"
        ],
        "analyse": [
            "phpstan analyse"
        ],
        "test": [
            "pest --colors=always --parallel"
        ],
        "refactor": [
            "rector process"
        ]
    }
}
